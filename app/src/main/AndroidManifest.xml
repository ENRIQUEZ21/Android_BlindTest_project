<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.isep.blindtest_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_music_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlindTest_project">
        <activity
            android:name=".SongActivity"
            android:exported="true"/>

        <activity
            android:name=".SpotifyActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChoiceNamePlayers"
            android:exported="false" />
        <activity
            android:name=".ChoiceSettings"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"/>
    </application>

</manifest>