<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Click on the name of the user who found"
        android:textColor="@color/text_yellow"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_player_1"
        android:layout_width="278dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/text_yellow"
        android:visibility="invisible"
        android:onClick="buttonPlayer1Found"
        android:text="PLAYER 1"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/btn_player_2"
        android:layout_width="278dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/text_yellow"
        android:visibility="invisible"
        android:onClick="buttonPlayer2Found"
        android:text="PLAYER 2"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_player_1"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/btn_player_3"
        android:layout_width="278dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/text_yellow"
        android:visibility="invisible"
        android:onClick="buttonPlayer3Found"
        android:text="PLAYER 3"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_player_2"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/btn_player_4"
        android:layout_width="278dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/text_yellow"
        android:visibility="invisible"
        android:onClick="buttonPlayer4Found"
        android:text="PLAYER 4"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_player_3"
        app:layout_constraintVertical_bias="0.131" />


</androidx.constraintlayout.widget.ConstraintLayout>