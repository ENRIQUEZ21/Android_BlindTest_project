<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Click on the name of the user who found"
        android:textColor="@color/text_yellow"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:layout_width="fill_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp">

            <Button
                android:id="@+id/btn_player_1"
                android:layout_width="278dp"
                android:layout_height="86dp"
                android:backgroundTint="@color/text_yellow"
                android:visibility="invisible"
                android:onClick="buttonPlayer1Found"
                android:text="PLAYER 1"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

            <Button
                android:id="@+id/btn_player_2"
                android:layout_width="278dp"
                android:layout_height="86dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/text_yellow"
                android:visibility="invisible"
                android:onClick="buttonPlayer2Found"
                android:text="PLAYER 2"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_player_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp">
            <Button
                android:id="@+id/btn_player_3"
                android:layout_width="278dp"
                android:layout_height="86dp"
                android:backgroundTint="@color/text_yellow"
                android:visibility="invisible"
                android:onClick="buttonPlayer3Found"
                android:text="PLAYER 3"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_player_2" />

            <Button
                android:id="@+id/btn_player_4"
                android:layout_width="278dp"
                android:layout_height="86dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/text_yellow"
                android:visibility="invisible"
                android:onClick="buttonPlayer4Found"
                android:text="PLAYER 4"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_player_3" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>