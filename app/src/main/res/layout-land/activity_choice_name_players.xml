<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent"
    tools:context=".ChoiceNamePlayers">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_users_foreground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Choose the names of the players"
            android:textColor="@color/text_yellow"
            android:textSize="36dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="120dp"
        android:layout_width="fill_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_width="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/linear_player_1"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_name_of_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of the player 1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name of player 1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/linear_player_3"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_name_of_player_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of the player 3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name of player 3"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/linear_player_2"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_name_of_player_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of the player 2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name of player 2"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:id="@+id/linear_player_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_name_of_player_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of the player 4"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name of player 4"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:id="@+id/button_to_play"
            android:layout_width="278dp"
            android:layout_height="86dp"
            android:onClick="buttonToPlay"
            android:text="Play"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/image_play_game"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_alignRight="@id/button_to_play"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>